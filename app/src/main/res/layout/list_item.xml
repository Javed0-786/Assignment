<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/topSourceCard"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:id="@+id/imageCard"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/image"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/original"/>

            </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/title"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/imageCard"
            android:text="Sample link nameis good" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 Aug 2022"
                android:textColor="@color/silver"
                android:layout_below="@+id/title"
                android:layout_toRightOf="@id/imageCard"
                android:layout_marginTop="6dp"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="20dp"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:text="2456" />

            <TextView
                android:id="@+id/click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clicks"
                android:textColor="@color/silver"
                android:layout_below="@+id/count"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:id="@+id/weblink"
                android:layout_below="@+id/imageCard"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#0e6fff"
                android:text="https://samplelink.oia.bio/ashdworld" />

            <ImageView
                android:id="@+id/copyIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageCard"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:src="@drawable/copy"
                android:contentDescription="Copy" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>